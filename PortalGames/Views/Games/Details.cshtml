@model PortalGames.Models.Game

@{
    ViewData["Title"] = "Details";
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<partial>
    <img src="@Model.Url" width="480" height="360" style="display:inline-block" />
    <h1 class="text-center">@Model.Name</h1>
    <ul>
        <li><h3>@Model.Price тг.</h3></li>
        <li><h5>@Html.DisplayNameFor(model => model.Genre)</h5>@Html.DisplayFor(model => model.Genre)</li>
        <li><h5>@Html.DisplayNameFor(model => model.Release)</h5>@Html.DisplayFor(model => model.Release.Date)</li>
        <li><h5>@Html.DisplayNameFor(model => model.Mode)</h5>@Html.DisplayFor(model => model.Mode)</li>
        <li><h5>@Html.DisplayNameFor(model => model.Age)</h5>@Html.DisplayFor(model => model.Age)+</li>
        <li><h5>@Html.DisplayNameFor(model => model.Description)</h5></li>
        <text>@Html.DisplayFor(model => model.Description)</text>
    </ul>
</partial>

